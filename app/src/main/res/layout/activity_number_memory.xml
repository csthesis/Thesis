<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumberMemory"
    android:background="@color/bgRed"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textView39"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/reddark"
        android:fontFamily="@font/aldrich"
        android:text="Shoot the falling blocks with the right answer to the problem"
        android:textAlignment="center"
        android:textColor="@color/textBlack"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/reddark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/pause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="Number Memory"
            android:textAlignment="center"
            android:textColor="@color/textBlack"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/categoryimg"
            app:layout_constraintStart_toEndOf="@+id/pause"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/categoryimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/brain" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/slot2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/redLight"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:textColor="@color/textBlack"
        android:textSize="50sp"
        app:layout_columnWeight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        app:layout_rowWeight="1"
        tools:text="_" />

    <TextView
        android:id="@+id/slot1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="4dp"
        android:background="@color/redLight"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:textColor="@color/textBlack"
        android:textSize="50sp"
        app:layout_columnWeight="1"
        app:layout_constraintBottom_toBottomOf="@+id/slot2"
        app:layout_constraintEnd_toStartOf="@+id/slot2"
        app:layout_constraintTop_toTopOf="@+id/slot2"
        app:layout_rowWeight="1"
        tools:text="_" />

    <TextView
        android:id="@+id/slot3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:background="@color/redLight"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:textColor="@color/textBlack"
        android:textSize="50sp"
        app:layout_columnWeight="1"
        app:layout_constraintBottom_toBottomOf="@+id/slot2"
        app:layout_constraintStart_toEndOf="@+id/slot2"
        app:layout_constraintTop_toTopOf="@+id/slot2"
        app:layout_rowWeight="1"
        tools:text="_" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="227dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/textView39"
        app:layout_constraintEnd_toEndOf="@+id/slot3"
        app:layout_constraintStart_toStartOf="@+id/slot1"
        app:rowCount="4">

        <Button
            android:id="@+id/n1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/redLight"
            android:fontFamily="@font/aldrich"
            android:text="1"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/n2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/redLight"
            android:fontFamily="@font/aldrich"
            android:text="2"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/n3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/redLight"
            android:fontFamily="@font/aldrich"
            android:text="3"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/extra"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/bgColor"
            android:fontFamily="@font/aldrich"
            android:textSize="30sp"
            android:visibility="invisible"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/n0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/redLight"
            android:fontFamily="@font/aldrich"
            android:text="0"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/extra2"
            android:layout_width="75dp"
            android:layout_height="78dp"
            android:background="@color/reddark"
            android:fontFamily="@font/aldrich"
            android:text="C"
            android:textColor="@color/textWhite"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/n4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/redLight"
            android:fontFamily="@font/aldrich"
            android:text="4"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/n7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/redLight"
            android:fontFamily="@font/aldrich"
            android:text="7"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/n8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/redLight"
            android:fontFamily="@font/aldrich"
            android:text="8"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/n9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/redLight"
            android:fontFamily="@font/aldrich"
            android:text="9"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/n5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/redLight"
            android:fontFamily="@font/aldrich"
            android:text="5"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/n6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/redLight"
            android:fontFamily="@font/aldrich"
            android:text="6"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="1" />
    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/playz"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:fontFamily="@font/aldrich"
        android:text="Play"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/scorzz"
        app:layout_constraintEnd_toEndOf="@+id/slot1"
        app:layout_constraintStart_toStartOf="@+id/slot1"
        app:layout_constraintTop_toTopOf="@+id/scorzz" />

    <Button
        android:id="@+id/dan"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:fontFamily="@font/aldrich"
        android:text="Done"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/scorzz"
        app:layout_constraintEnd_toEndOf="@+id/slot3"
        app:layout_constraintStart_toStartOf="@+id/slot3"
        app:layout_constraintTop_toTopOf="@+id/scorzz" />

    <TextView
        android:id="@+id/scorzz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/aldrich"
        android:text="0"
        android:textColor="@color/textBlack"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout3"
        app:layout_constraintEnd_toEndOf="@+id/slot2"
        app:layout_constraintStart_toStartOf="@+id/slot2"
        app:layout_constraintTop_toBottomOf="@+id/slot2" />
</android.support.constraint.ConstraintLayout>